    <!-- body part -->
    <section style="padding: 20px; margin-top: 40px;"  >
      <div class="container mt-3" style="background-color: #c1dfc4;padding-bottom: 30px;">
        <%- include('partials/messages') %>
        <h1 style="text-align: center; font-family: 'Allerta Stencil', sans-serif;font-size: 3em;padding-top: 20px; padding-bottom: 10px;">Welcome to SHUATS BROADCAST</h1>
        <hr>
        <h2 style="text-align: center; margin-bottom: 50px;">We welcome you to our  website where we all become one family (SHUATS family) and can reach out to each other for any sake .</h2> 
          <img src="https://static.wixstatic.com/media/11062b_a988e9cffab44643b52a0d422823bc9d~mv2.jpeg/v1/fill/w_1225,h_975,al_c,q_85,usm_0.66_1.00_0.01,enc_auto/11062b_a988e9cffab44643b52a0d422823bc9d~mv2.jpeg" alt="Remote Working" style="width:100%; height:500px; object-fit: cover; object-position: 50% 50%;"  fetchpriority="high"></img>
          <div class="row" style="margin-top: 15px;margin-bottom: 25px;margin-left: 0px;margin-right: 0px;">
            <div class="col-md-6 " style="background-color:#dfe9f3;color:#000; text-align: center; padding: 50px;"><h1 class="shadow1">What's in your mind ?</h1> </div>
            <div class="col-md-6 ml-auto" style="background-color:#bdc2e8; font-size: 25px; padding: 30px" >SHUATS BROADCAST website helps you with several things. It can be used for generating notices, building community, organizing event on college level and posting your day to day thoughts. </div>
          </div>
          <div style="font-size: 25px;"><u><i>You can perform : </i></u></div>
          <hr>
          <div style="padding-left: 10px;">
            <div style=" font-size: 35px;"><i class="bi bi-check2-circle"></i> Posting Your Day-To-Day Thoughts as well as Images.</div>
            <hr>  
            <div style="font-size: 35px;"><i class="bi bi-check2-circle"></i> Finding Quality People.</div> 
               <hr>
            <div style="font-size: 35px;"><i class="bi bi-check2-circle"></i> Learning New Things.</div>
              <hr>
            <div style="font-size: 35px;"><i class="bi bi-check2-circle"></i> Generating Notices.</div>
              <hr>
            <div style="font-size: 35px;"><i class="bi bi-check2-circle"></i> Building Communities.</div>
              <hr>
              <a style="margin-left: 45px;" href="#login" type="button" class="btn btn-outline-success " data-bs-toggle="modal" data-bs-target="#register">Click here to start your journey <i class="bi bi-person-add"></i></a>
            
           </div>

      </div> 
    </section>
    <footer>

    </footer>





























    <section style="padding-top: 0px;padding-bottom: 0px;">  
      <!-- Login Modal -->
      <div class="modal fade " id="login" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
        <div class="modal-dialog " style="margin-top: 200px;">
          <div class="modal-content" style="background-color: #000;color:#fff;">
            <div class="modal-header" >
              <h1 class="modal-title fs-5" id="exampleModalLabel">Login</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="color: #ff2600;"><i class="bi bi-x-circle-fill"></i></button>
            </div>
            <form action="/login" method="POST">
              <div class="modal-body">
            
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">College ID</span>
                  <input type="text" class="form-control" name="email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>
                <div class="input-group input-group-sm mb-3">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Password</span>
                  <input type="password" class="form-control" name="password" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>
              </div>
              <div class="modal-footer">
                <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
                <button type="submit" class="btn btn-outline-info btn-sm">Enter Shuats Broadcast</button>
  
              </div>

            </form>
           
          </div>
        </div>
      </div>
    </section>
    
    <section style="padding-top: 0px;padding-bottom: 0px;">
        <!-- Register Modal -->
        <div class="modal fade " id="register" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" style="margin-top: 200px;">
            <div class="modal-content" style="background-color: #000;color: #fff;">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel" style="text-align: center;">Register</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" style="color: #ff2600;"><i class="bi bi-x-circle-fill"></i></button>
              </div>
              <form action="/register" method="post">
                <div class="modal-body">
                  <div class="input-group input-group-sm mb-3">
                    <input class="form-control form-control-sm" type="text" name="fname" placeholder="Enter Your Name" aria-label=".form-control-sm example">
                  </div>
                  
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">College ID</span>
                    <input type="username" name="email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="e.g. 22mca009">
                  </div>
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Password</span>
                    <input type="password" name="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="minumum lenght 6" value="<%= typeof password != 'undefined' ? password : '' %>">
                  </div>
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Re-Password</span>
                    <input type="password" name="backup" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="minumum lenght 6" value="<%= typeof backup != 'undefined' ? backup : '' %>">
                  </div>
                </div>
                <div class="modal-footer">
                  <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
                  <button type="submit" class="btn btn-outline-success btn-sm">Welcome to Shuats Broadcast</button>
  
                </div>
              </form>
             
            </div>
          </div>
        </div>
    </section>
    
      

