  <body >

    <!-- Navigation bar -->
    <header>
      <nav class="navbar bg-body-tertiary navbar-dark bg-dark fixed-top" >
        <div class="container-fluid">
          <a class="navbar-brand" href="#" style="margin-right: 0px;">SHUATS BROADCAST</a>
          
          <form class="d-flex" role="search">  
            <a type="button" class="btn " data-bs-toggle="modal" data-bs-target="#register" style="color: rgb(60, 255, 0);padding-left: 6px;padding-right: 6px;">Register <i class="bi bi-person-add"></i>&nbsp; <i class="bi bi-grip-vertical" style="color: #fff;"></i></a>
            <a  type="button" class="btn " data-bs-toggle="modal" data-bs-target="#login" style="color: rgb(255, 0, 132);padding-left: 6px;padding-right: 6px;">Login <i class="bi bi-box-arrow-in-right"></i></a>
